<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/border"
    >

    <ImageView
        android:layout_width="50pt"
        android:layout_height="50pt"
        android:id="@+id/button_image"
        android:src="@mipmap/db"
        android:elevation="0dp"
        android:cropToPadding="false"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:foregroundGravity="center_vertical|center_horizontal" />

    <ImageView
        android:layout_width="10pt"
        android:layout_height="10pt"
        android:id="@+id/indicator_image"
        android:src="@mipmap/status_r"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/button_image" />

    <TextView
        android:text="123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:layout_alignBottom="@+id/indicator_image"
        android:layout_alignStart="@+id/button_image" />

</RelativeLayout>